<h2>Manage Movies</h2>

@model IEnumerable<Movie>

@if(!Model.Any())
{
    <tr><td colspan="3" class="text-center">No movies.</td></tr>
}
else
{
    <table class="table table-condensed table-bordered" header header-content="Movie Management">
        <tr>
            <th>Movie ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Genre</th>
            <th></th>
        </tr>
        @foreach(Movie movie in Model)
        {
            <tr>
                <td>@movie.MovieId</td>
                <td>@movie.Title</td>
                <td>@movie.Description</td>
                <td>@movie.Genre.GenreName</td>
                <td>
                    <form asp-action="DeleteMovie" asp-route-id="@movie.MovieId" method="get">
                        <a class="btn btn-sm btn-primary" asp-action="UpdateMovie" asp-route-id="@movie.MovieId">Edit</a>
                        <Button type="submit"
                        onclick="return confirm('Are you sure you want to delete this movie?');"
                        class="btn btn-sm btn-danger">
                            Delete
                        </Button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a asp-action="AddMovie" class="btn btn-primary">Add a new movie</a>
}