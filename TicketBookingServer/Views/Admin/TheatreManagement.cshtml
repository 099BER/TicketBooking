@model TheatreManagementViewModel
<h2>Manage theatres</h2>

@if(!Model.Theatres.Any())
{
    <tr><td colspan="3" class="text-center">No theatres.</td></tr>
}
else
{
    <table class="table table-condensed table-bordered" header header-content="Theatre Management">
        <tr>
            <th>Theatre ID</th>
            <th>Theatre Mame</th>
            <th>Number of seats</th>
            <th></th>
        </tr>
        @foreach(Theatre theatre in Model.Theatres)
        {
            <tr>
                <td>@theatre.TheatreId</td>
                <td>@theatre.Name</td>
                <td>@theatre.SeatingConfig.NumberOfSeats</td>
                <td>
                    <form asp-action="DeleteTheatre" asp-route-id="@theatre.TheatreId" method="get">
                        <a class="btn btn-sm btn-primary" asp-action="EditTheatre" asp-route-id="@theatre.TheatreId">Edit</a>
                        <Button type="submit"
                        onclick="return confirm('Are you sure you want to delete this theatre?');"
                        class="btn btn-sm btn-danger">
                            Delete
                        </Button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <a asp-action="AddTheatre" class="btn btn-primary">Add a new theatre</a>
}